<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee     http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WriteServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.WriteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.CommentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.DeleteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GreatServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.GreatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.ModifyServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyProtraitServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.PortraitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFriendServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.AddFriendServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upgradeFriendServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.UpgradeFriendServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteFriendServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.DeleteFriendServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <servlet-class>cn.omsfuk.servlet.VerifyCodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WriteServlet</servlet-name>
        <url-pattern>/write</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GreatServlet</servlet-name>
        <url-pattern>/great</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyProtraitServlet</servlet-name>
        <url-pattern>/modpor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFriendServlet</servlet-name>
        <url-pattern>/addFriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upgradeFriendServlet</servlet-name>
        <url-pattern>/upgradeFriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteFriendServlet</servlet-name>
        <url-pattern>/deleteFriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerifyCodeServlet</servlet-name>
        <url-pattern>/verifyCode</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>cn.omsfuk.filter.EncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>cn.omsfuk.filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>IllegalCharacterFilter</filter-name>
        <filter-class>cn.omsfuk.filter.XSSFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/index</url-pattern>
        <url-pattern>/write</url-pattern>
        <url-pattern>/comment</url-pattern>
        <url-pattern>/delete</url-pattern>
        <url-pattern>/great</url-pattern>
        <url-pattern>/modify</url-pattern>
        <url-pattern>/delete</url-pattern>
        <url-pattern>/modpor</url-pattern>
        <url-pattern>/addFriend</url-pattern>
        <url-pattern>/upgradeFriend</url-pattern>
        <url-pattern>/deleteFriend</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>IllegalCharacterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
